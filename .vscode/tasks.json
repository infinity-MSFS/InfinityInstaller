{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "type": "shell",
      "args": [
        "InfinityLauncherInstaller.sln",
        "/property:GenerateFullPaths=true",
        "/t:build",
        "/p:Configuration=Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Build C++ project using MSBuild in debug config"
    },
    {
      "label": "Build Release",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "type": "shell",
      "args": [
        "InfinityLauncherInstaller.sln",
        "/property:GenerateFullPaths=true",
        "/t:build",
        "/p:Configuration=Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Build C++ project using MSBuild in release config"
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "${workspaceFolder}/bin/Debug-windows-x86_64/InfinityLauncherInstaller/InfinityLauncherInstaller.exe",
      "args": [],
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Debug",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Debug", "Run Executable"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Release",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Release", "Run Executable"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
